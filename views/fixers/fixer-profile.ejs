</head>

<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">mend</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/logout" class="landing-nav">Log Out</a></li>
          <li><a href="/suggestion" class="landing-nav">Suggestions</a></li>
        </ul>
      </div>
    </div>
  </nav>


    <div class="container-fluid">

        <!-- USER PICTURE AND WELCOME -->
        <div id="welcome-user">
            <img id="profile-picture" class="img-circle" class="span4" src="http://i1.wp.com/www.thisblogrules.com/wp-content/uploads/2010/02/batman-for-facebook.jpg?resize=250%2C280">
            <h2 id="welcome-name"> Welcome back, <%= user.name %>! </h2>
        </div>


        <div class="row">
            <div class="container-fluid">

              <div class="fixing">
                <h3 id="needs-fixing">What needs fixing? </h3>
                <h4>Post an item to the community...</h4>
              </div>


                <form id="item-form">
                    <input type="text" placeholder="item, problem..." class="user-item"> in
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories<span class="caret"></span>
          </button>
                        <ul class="dropdown-menu">
                            <li><input type="checkbox" name="category" id="electronics" value="Electronics">Electronics<br></li>
                            <li><input type="checkbox" name="category" id="textiles" value="Clothing">Clothing/Textiles <br></li>
                            <li><input type="checkbox" name="category" id="toys" value="Toys">Toys<br></li>
                            <li><input type="checkbox" name="category" id="furniture" value="Furniture">Furniture<br></li>
                            <li><input type="checkbox" name="category" id="appliances" value="Appliances">Appliances<br></li>
                            <li><input type="checkbox" name="category" id="bicycles" value="Bicycles">Bicycles<br></li>
                        </ul>
                    </div>
                    <button type="button" name="Add" value="add" id="add-item-button">Post</button>

                    <!-- INVISIBLE USER ID INPUT -->
                    <input type="text" id="user-id" value="<%= user._id%>">




                    <!-- <input type="submit" name="Remove" value="remove"> -->

                </form>

                <table id="new-items">
                    <!-- <table> -->

                        <!-- USER ITEMS -->


                        <% items.forEach((item) => { %>

                        </br>

                              <li id="table-item">  <%= item.name %>


                                  <button class="delete-item" data="<%= item._id%>">Delete Item</button>
                                    <input type="text" id="item-id" value="<%= item._id%>">


                            <%  }) %>

                          </li>
                        <!-- </br> -->
                    </table>




            </div>


        </div>
    </div>

  </div>
</div>




